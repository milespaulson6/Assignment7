@model IEnumerable<string>



<a class="btn btn-block btn-outline-primary" asp-action="Index" asp-controller="Home"
   asp-route-category="">Home</a>

@foreach (string category in Model)
{
    <a class="btn btn-block btn-outline-primary @(category == ViewBag.SelectedCategory ? "btn-danger" : "btn-outline-primary")"
       asp-action="Index" asp-controller="Home"
       asp-route-category="@category"
       asp-route-page="1">
        @category
    </a>
}